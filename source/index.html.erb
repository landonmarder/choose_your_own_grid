  <body>
    <h1 class='centered'>Choose Your Own Grid</h1>
    <div class="container">
    <h2 class='centered'><a href="https://s3-us-west-2.amazonaws.com/landonmarder/grid.scss" class="centered">Download</a></h2>
    </div>
    <div class='container'>
      <h2 class="centered">Typical Grid Stuff</h2>
      <div class="row">
        <div class='column-1-of-2 green'><h3>.column-1-of-2</h3></div>
        <div class='column-1-of-2 red'><h3>.column-1-of-2</h3></div>
      </div>

      <div class="row">
        <div class='column-1-of-3 green'><h3>.column-1-of-3</h3></div>
        <div class='column-2-of-3 red'><h3>.column-2-of-3</h3></div>
      </div>

      <div class="row">
        <div class='column-2-of-3 green'><h3>.column-2-of-3</h3></div>
        <div class='column-1-of-3 red'><h3>.column-1-of-3</h3></div>
      </div>

      <div class="row">
        <div class='column-2-of-3 green'><h3>.column-2-of-3</h3></div>
        <div class='column-1-of-3 red'><h3>.column-1-of-3</h3></div>
      </div>

       <div class="row">
          <div class='column-20-of-100 green'><h3>.column-8-of-100</h3></div>
          <div class='column-20-of-100 red'><h3>.column-22-of-100</h3></div>
          <div class='column-27-of-100 orange'><h3>.column-27-of-100</h3></div>
          <div class='column-33-of-100 blue'><h3>.column-43-of-100</h3></div>
      </div>

       <div class="row">
          <div class='column-63-of-100 red'><h3>.column-63-of-100</h3></div>
          <div class='column-37-of-100 green'><h3>.column-37-of-100</h3></div>
      </div>
    </div>
